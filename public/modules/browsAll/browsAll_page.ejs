            filteredProducts = allProducts.filter(product => {
                // Category filter
                if (currentFilters.categories.length > 0) {
                    if (!currentFilters.categories.includes(product.category)) return false;
                }

                // Price filter
                if (product.price < currentFilters.minPrice || product.price > currentFilters.maxPrice) {
                    return false;
                }

                // Color filter
                if (currentFilters.colors.length > 0) {
                    if (!currentFilters.colors.includes(product.color)) return false;
                }

                // Rating filter
                if (currentFilters.rating !== null) {
                    if (product.rating < currentFilters.rating) return false;
                }

                // Search filter
